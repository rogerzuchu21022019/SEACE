<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="history"
            type="team.hacker.seace.models.HistoryChatModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:padding="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{history.userName,default=`nam`}"
            app:layout_constraintBottom_toBottomOf="@id/civStory"
            app:layout_constraintStart_toEndOf="@id/civStory"
            app:layout_constraintTop_toTopOf="@id/civStory"
            app:layout_constraintVertical_bias="0.2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvContentMessage"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@{history.contentChat,default=`ok la`}"
            app:layout_constraintStart_toEndOf="@id/civStory"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>